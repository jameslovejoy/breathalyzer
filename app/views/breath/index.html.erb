<div class="container">
  <div class="row" style="height:20px">&nbsp;</div>

  <div class="row">
    <div class="span12">
      <h4><a href="/">Can you see your breath?</a></h4>
    </div>
  </div>

  <div class="row seebreath">
    <div class="span12">
      <p class="seebreath"><%= image_tag "spinner.gif" %></p>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <table class="table table-condensed">
        <tbody>
          <tr><td><i class="icon-map-marker"></i> Location</td><td class="location">Loading...</td></tr>
          <tr><td><i class="icon-cog"></i> Temperature</td><td class="temp">Loading...</td></tr>
          <tr><td><i class="icon-tint"></i> Humidity</td><td class="humidity">Loading...</td></tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="span12">

      <div class="location">
        <span class="hide" id="customLocation"><%= params[:location] %></span>
        <button class="btn btn-small" id="change-location"><i class="icon-screenshot"></i> New Location</button>
      </div>

      <form action="/" method="get" class="form-inline hide" id="change-location-form">
        <div class="input-append">
          <input type="text" name="location" class="input-xsmall input-append" placeholder="Enter ZIP Code or City"/>
          <button class="btn btn-primary btn-large">Go</button>
        </div>
      </form>

    </div>
  </div>
</div>